{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "group": "build",
            "dependsOn": [
                "Generate Elm model",
                "Build client",
                "Build server"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "Generate Elm model",
            "group": "build",
            "type": "shell",
            "command": "stack generate-elm.hs",
            "problemMatcher": []
        },
        {
            "label": "Build client",
            "group": "build",
            "type": "shell",
            "command": "elm make src/Main.elm --output app/main.js",
            "options": {
                "cwd": "client"
            },
            "problemMatcher": []
        },
        {
            "label": "Build server",
            "group": "build",
            "type": "shell",
            "command": "stack build",
            "problemMatcher": []
        },
        {
            "label": "Run server",
            "dependsOn": ["Build"],
            "type": "shell",
            "command": "stack run -- --storage .storage",
            "problemMatcher": []
        }
    ]
}
